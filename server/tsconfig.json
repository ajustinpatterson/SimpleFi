{
  "compilerOptions": {
    "strictNullChecks": true,
    "strict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": ["server/**/*.ts"],
  "exclude": ["node_modules"]
}
